          "name": "Redirect to Original URL",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Extract the Location header from the 302 redirect response",
                  "const locationHeader = pm.response.headers.get(\"Location\");",
                  "",
                  "var template = `",
                  "<style>",
                  "    .container {",
                  "        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;",
                  "        padding: 30px;",
                  "        text-align: center;",
                  "        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);",
                  "        border-radius: 12px;",
                  "        max-width: 500px;",
                  "        margin: 20px auto;",
                  "        box-shadow: 0 10px 40px rgba(0,0,0,0.2);",
                  "    }",
                  "    .header {",
                  "        color: white;",
                  "        font-size: 24px;",
                  "        font-weight: 600;",
                  "        margin-bottom: 10px;",
                  "    }",
                  "    .status {",
                  "        color: rgba(255,255,255,0.9);",
                  "        font-size: 14px;",
                  "        margin-bottom: 25px;",
                  "    }",
                  "    .url-box {",
                  "        background: rgba(255,255,255,0.15);",
                  "        border-radius: 8px;",
                  "        padding: 15px;",
                  "        margin-bottom: 25px;",
                  "        word-break: break-all;",
                  "    }",
                  "    .url-label {",
                  "        color: rgba(255,255,255,0.7);",
                  "        font-size: 12px;",
                  "        text-transform: uppercase;",
                  "        letter-spacing: 1px;",
                  "        margin-bottom: 8px;",
                  "    }",
                  "    .url-value {",
                  "        color: white;",
                  "        font-size: 14px;",
                  "        font-weight: 500;",
                  "    }",
                  "    .open-btn {",
                  "        display: inline-block;",
                  "        background: white;",
                  "        color: #667eea;",
                  "        padding: 14px 32px;",
                  "        border-radius: 8px;",
                  "        text-decoration: none;",
                  "        font-size: 16px;",
                  "        font-weight: 600;",
                  "        transition: all 0.3s ease;",
                  "        box-shadow: 0 4px 15px rgba(0,0,0,0.2);",
                  "    }",
                  "    .open-btn:hover {",
                  "        transform: translateY(-2px);",
                  "        box-shadow: 0 6px 20px rgba(0,0,0,0.3);",
                  "    }",
                  "    .no-redirect {",
                  "        color: rgba(255,255,255,0.9);",
                  "        font-size: 16px;",
                  "        padding: 20px;",
                  "    }",
                  "</style>",
                  "",
                  "<div class=\"container\">",
                  "    {{#if redirectUrl}}",
                  "        <div class=\"header\">üîó Redirect Detected</div>",
                  "        <div class=\"status\">Status: {{statusCode}} {{statusText}}</div>",
                  "        <div class=\"url-box\">",
                  "            <div class=\"url-label\">Redirect URL</div>",
                  "            <div class=\"url-value\">{{redirectUrl}}</div>",
                  "        </div>",
                  "        <a href=\"{{redirectUrl}}\" target=\"_blank\" class=\"open-btn\">",
                  "            Open Redirected URL ‚Üó",
                  "        </a>",
                  "    {{else}}",
                  "        <div class=\"header\">‚ö†Ô∏è No Redirect Found</div>",
                  "        <div class=\"no-redirect\">",
                  "            No Location header was found in the response.<br>",
                  "            Status: {{statusCode}} {{statusText}}",
                  "        </div>",
                  "    {{/if}}",
                  "</div>",
                  "`;",
                  "",
                  "function createPayload() {",
                  "    return {",
                  "        redirectUrl: locationHeader || null,",
                  "        statusCode: pm.response.code,",
                  "        statusText: pm.response.status",
                  "    };",
                  "}",
                  "",
                  "pm.visualizer.set(template, createPayload());"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
